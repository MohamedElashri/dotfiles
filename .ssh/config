Host sneezy
    User melashri
    HostName sneezy.geop.uc.edu
    Port 22

Host sleepy
    User melashri
    HostName sleepy.geop.uc.edu
    Port 22

Host goofy
    User melashri
    HostName goofy.geop.uc.edu
    Port 22
    ForwardX11 yes
    ForwardX11Trusted yes
    ProxyJump melashri@earth.phy.uc.edu:22

Host earth
    User melashri
    HostName earth.phy.uc.edu
    Port 22
    ForwardX11 yes

Host *
    IdentityFile ~/.ssh/id_rsa
    AddKeysToAgent yes
    # UseKeychain yes  # Commented out as it's not supported on Linux

# Entry for lxplus
Host lxplus
    User melashri
    HostName lxplus.cern.ch
    Port 22
    ForwardX11 yes
    ForwardAgent yes
    ServerAliveInterval 60
    ServerAliveCountMax 240
    IdentityFile ~/.ssh/id_rsa

# Entry for lbgw which is accessible via lxplus
Host lbgw
    HostName lbgw
    User melashri
    Port 22
    ProxyJump lxplus

# Entry for GPU server farm accessible via lbgw
Host gpu
    HostName n4050101
    User melashri
    Port 22
    ProxyCommand ssh -W %h:%p lbgw

Host sleepy-earth
    User melashri
    HostName sleepy.geop.uc.edu
    Port 22
    LocalForward 8765 localhost:8765
    ForwardAgent yes
    ForwardX11 yes
    ForwardX11Trusted yes
    ProxyJump melashri@earth.phy.uc.edu:22
    ServerAliveInterval 600
    ServerAliveCountMax 240

