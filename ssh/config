# CERN-related configurations
Host lxplus
    User melashri
    HostName lxplus.cern.ch
    Port 22
    ForwardX11 yes
    ForwardAgent yes
    ServerAliveInterval 60
    ServerAliveCountMax 240
    SetEnv TERM=xterm-256color

Host lxplus-gpu
    User melashri
    HostName lxplus-gpu.cern.ch
    Port 22
    ForwardX11 yes
    ForwardAgent yes
    ServerAliveInterval 60
    ServerAliveCountMax 240
    SetEnv TERM=xterm-256color

Host lbgw
    HostName lbgw
    User melashri
    Port 22
    ProxyJump lxplus

Host gpu
    HostName n4050101
    User melashri
    Port 22
    ProxyJump lbgw

# General configuration for all other hosts
Host *
    IdentityAgent ~/.1password/agent.sock
    AddKeysToAgent yes
    ForwardX11 yes
    ForwardAgent yes
    ServerAliveCountMax 240
    ServerAliveInterval 60
